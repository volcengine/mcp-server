{
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "noEmitOnError": false,
      "forceConsistentCasingInFileNames": true,
      "allowJs": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  